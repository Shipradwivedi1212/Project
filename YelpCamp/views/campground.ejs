<% layout('layouts/boilerplate') %>
    <h1>ALL Campgrounds</h1>
    <% for(let i= 0;i<camps.length;i++){%>
        <div class="card mb-3">
           <div class="row">
              <div class="col-md-4">
            <img class="img-fluid" src="https://res.cloudinary.com/doifgqlcy/image/upload/v1727606521/pexels-cliford-mervil-988071-2398220_l2k0em.jpg" alt="" crossorigin="anonymous">
              </div>
           
      <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"><%= camps[i].title %> </h5>
                <p class="card-text"><%= camps[i].description %></p>
                <p class="card-text">
                    <small class="text-muted"><%= camps[i].location%></small>
                </p>
                <a class="btn btn-primary" href="/campgrounds/<%=camps[i]._id%>">View <%=camps[i].title%></a>
            </div>
        </div>
    </div>
    </div>
    <%}%>


